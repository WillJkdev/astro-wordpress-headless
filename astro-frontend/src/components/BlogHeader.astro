---
import { User, Calendar } from "lucide-react";
interface Props {
  title: string;
  content: string;
}
const { title, content } = Astro.props;
---

<header
  class="bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 text-white py-16 px-4"
>
  <div class="max-w-6xl mx-auto text-center">
    <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
      {title}
    </h1>
    <div
      class="text-xl md:text-2xl text-indigo-100 mb-8 max-w-3xl mx-auto leading-relaxed animate-fade-in"
      set:html={content}
    />
    <div class="flex items-center justify-center gap-6 text-indigo-200">
      <div class="flex items-center gap-2">
        <User size={20} />
        <span>GameStudio</span>
      </div>
      <div class="flex items-center gap-2">
        <Calendar size={20} />
        <span>Actualizado regularmente</span>
      </div>
    </div>
  </div>
</header>
