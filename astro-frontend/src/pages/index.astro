---
import ArticlesGrid from "../components/ArticlesGrid.astro";
import BlogHeader from "../components/BlogHeader.astro";
import Layout from "../layouts/Layout.astro";
import { getLatestPosts, getPages } from "../lib/wp";

const { title, content } = await getPages("bienvenido-a-gamefreak");
const posts = await getLatestPosts({ perPage: 3 });
console.log(posts);
---

<Layout title="Welcome to Astro." description="Welcome to Astro.">
  <main>
    <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
      <BlogHeader title={title} content={content} />
      <ArticlesGrid articles={posts} />

      {/* Footer */}
      <footer class="bg-gray-900 text-white py-12 px-4">
        <div class="max-w-6xl mx-auto text-center">
          <h3 class="text-2xl font-bold mb-4">Mi Blog Personal</h3>
          <p class="text-gray-400 mb-6">
            Explorando el mundo de la tecnología y el desarrollo web
          </p>
          <div class="text-sm text-gray-500">
            © 2024 Mi Blog Personal. Todos los derechos reservados.
          </div>
        </div>
      </footer>
    </div>
  </main>
</Layout>
